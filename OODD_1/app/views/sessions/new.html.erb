<%if flash[:danger] %><div class="alert alert-danger"> <%= flash[:danger] %></div><%end%>
<%= form_for(:session, url: login_path, :html => { :class => "form-horizontal"}) do |f| %>

  <div class="form-group">
    <%= f.label(:email, class: "col-sm-2 control-label") %><br>
    <div class="col-sm-10">
      <%= f.text_field(:email, class: "form-control") %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label(:password, class: "col-sm-2 control-label") %><br>
    <div class="col-sm-10">
      <%= f.password_field(:password, class: "form-control") %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label(:option, class: "col-sm-2 control-label") %>
    <div class="col-sm-10">
      <span><%= f.radio_button :option, "member" , checked: true %>
      <%= f.label :option, "Member", :value => "member" %></span>
      <span><%= f.radio_button :option ,"admin" %>
      <%= f.label :option, "Admin", :value => "admin"  %></span>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
     <%= f.submit "Login", class: "btn btn-success"  %>
    </div>
  </div>
  
<% end %>
